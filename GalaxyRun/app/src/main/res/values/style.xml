<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Applies the Cyanotype font -->
    <style name="Cyanotype" parent="@android:style/Widget.Button">
<!--        <item name="font">fonts/Cyanotype.ttf</item>-->
    </style>
    <!-- Applies the EngineerHand font -->
    <style name="EngineerHand" parent="@android:style/Widget.Button">
<!--        <item name="font">fonts/EngineerHand.ttf</item>-->
    </style>
    <!-- Applies Andromeda font -->
    <style name="Andromeda"> <!-- setting parent doesn't appear to do much -->
<!--        <item name="font">fonts/AndromedaTV.TTF</item>-->
    </style>
    <!-- Applies Galaxy Monkey font -->
    <style name="GalaxyMonkey">
<!--        <item name="font">fonts/galax___.ttf</item>-->
    </style>
    <!-- Style used for menu buttons -->
    <style name="Andromeda.MenuStyle">
        <item name="android:textColor">@drawable/button_textcolor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">80dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="GalaxyMonkey.MenuStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- Base style used for most text -->
    <style name="GalaxyMonkey.TextStyle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- Base style used for most text in FontButtons -->
    <style name="GalaxyMonkey.ButtonTextStyle">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- Style used for pause dialog -->
    <style name="DialogStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="NoTitleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowActionBar">false</item>
    </style>
    <!-- style used to apply enter_from_left and exit_to_right animations
     to a dialog. -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>
</resources>