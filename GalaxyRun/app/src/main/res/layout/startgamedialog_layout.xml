<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- dialog's title: displays name of selected GameMode -->
    <TextView
        style="@style/TextStyle"
        android:id="@+id/title"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxLines="1"/>
    <!-- displays GameMode's highscore -->
    <TextView
        style="@style/TextStyle"
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <!-- displays max stars earned for the GameMode -->
    <com.plainsimple.spaceships.view.StarsEarnedView
        android:id="@+id/starsearned_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <!-- horizontal linearlayout containing three equally-sized and spaced buttons for selecting
    difficulty level -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            style="@style/ButtonTextStyle"
            android:id="@+id/set_easy"
            android:text="@string/easy_difficulty"
            android:background="@drawable/difficultybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="3dp"
            android:layout_weight="1"/>
        <Button
            style="@style/ButtonTextStyle"
            android:id="@+id/set_medium"
            android:text="@string/medium_difficulty"
            android:background="@drawable/difficultybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="3dp"
            android:layout_weight="1"/>
        <Button
            style="@style/ButtonTextStyle"
            android:id="@+id/set_hard"
            android:text="@string/hard_difficulty"
            android:background="@drawable/difficultybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="3dp"
            android:layout_weight="1" />
    </LinearLayout>
    <Button
        style="@style/ButtonTextStyle"
        android:id="@+id/start_game"
        android:text="@string/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>